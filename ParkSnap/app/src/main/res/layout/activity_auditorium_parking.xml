                android:insetRight="5dp"
                android:insetBottom="5dp"
                android:text="C2"
                android:textColor="@color/white"
                android:textOff="C2"
                android:textOn="C2" />

            <ToggleButton
                android:id="@+id/C3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_weight="1"
